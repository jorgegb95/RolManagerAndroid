        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.EspeciesActivity" />
        <activity
            android:name=".activity.ListaPersonajesActivity"
            android:label="@string/title_activity_personaje"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activity.CrearPersonajeActivity" />
        <activity android:name=".activity.DetallesPersonajeActivity" />
        <activity android:name=".activity.ListaObjetosActivity"></activity>
    </application>

</manifest>